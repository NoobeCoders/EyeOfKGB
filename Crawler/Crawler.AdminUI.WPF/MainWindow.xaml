<Window x:Name="Main" x:Class="Crawler.AdminUI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Crawler.AdminUI.WPF"
        xmlns:localModels="clr-namespace:Crawler.AdminUI.WPF.Models"
        xmlns:localConverters="clr-namespace:Crawler.AdminUI.WPF.Converters"
        Title="Crawler.Admin" Height="400" Width="650"        
        >
    <Window.Resources>
        <localModels:GeneralModel x:Key="GeneralModel"></localModels:GeneralModel>

        <localConverters:ConvertStrInt x:Key="ConvertStrInt"></localConverters:ConvertStrInt>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.70*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <GridSplitter Grid.Column="1"
                      ShowsPreview="False"
                      Width="3"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch" />

        <ListBox Name="Menu" Grid.Column="0" FontSize="16" Foreground="Blue" SelectionChanged="Menu_SelectionChanged">
            <ListBoxItem IsSelected="True" Tag="GeneralStatistic.xaml">Общая статистика</ListBoxItem>
            <ListBoxItem Tag="DailyStats.xaml">Ежедневная статистика</ListBoxItem>
            <ListBoxItem IsEnabled="False" Margin="0,20,0,0">Справочники</ListBoxItem>
            <ListBoxItem Padding="60,0,0,0" Tag="PeopleDirectory.xaml">Личности</ListBoxItem>
            <ListBoxItem Padding="60,0,0,0" Tag="KeysDirectory.xaml">Ключевые слова</ListBoxItem>
            <ListBoxItem Padding="60,0,0,0" Tag="SitesDirectory.xaml">Сайты</ListBoxItem>
        </ListBox>

        <Frame Name="Statistic"
               Grid.Column="2"
               Source="{Binding ElementName=Menu, Path=SelectedItem.Tag}"
               NavigationUIVisibility="Hidden">            
        </Frame>

        

    </Grid>
</Window>
